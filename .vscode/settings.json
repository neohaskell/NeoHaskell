{
  "cSpell.words": [
    "absdir",
    "absfile",
    "Acculumator",
    "Appendable",
    "BIGSERIAL",
    "blackbox",
    "BYTEA",
    "bytestring",
    "clippy",
    "contrazip",
    "dbname",
    "Defaultable",
    "devenv",
    "dont",
    "elems",
    "foldl",
    "fourmolu",
    "fprint",
    "GADT",
    "globalposition",
    "haskellnix",
    "Hasql",
    "HIEYAML",
    "hlint",
    "Hspec",
    "Inspectable",
    "mempty",
    "MINVALUE",
    "Monoid",
    "Multitenant",
    "Nanotime",
    "NEOHASKELL",
    "nhcli",
    "nhcore",
    "nixfmt",
    "nixpkgs",
    "NOINLINE",
    "optparse",
    "OVERLAPPABLE",
    "pkgs",
    "plpgsql",
    "Posix",
    "quickcheck",
    "reldir",
    "relfile",
    "Semigroup",
    "snoc",
    "testlib",
    "tgname",
    "typeclasses",
    "Unagi",
    "VARCHAR"
  ],
  "nixEnvSelector.nixFile": "${workspaceFolder}/flake.nix",
  // Haskell
  "haskell.manageHLS": "PATH",
  "[haskell]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "haskell.haskell"
  },
  "haskell.formattingProvider": "fourmolu",
  "haskell.plugin.fourmolu.config.external": true,
  // JSON
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  // Markdown
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "discord.enabled": true,
  "vscord.enabled": true
}
