{
  "cSpell.words": [
    "absdir",
    "absfile",
    "Acculumator",
    "Appendable",
    "clippy",
    "Defaultable",
    "devenv",
    "dont",
    "foldl",
    "fourmolu",
    "fprint",
    "GADT",
    "HIEYAML",
    "hlint",
    "Hspec",
    "Inspectable",
    "Monoid",
    "Nanotime",
    "NEOHASKELL",
    "nhcore",
    "nixfmt",
    "nixpkgs",
    "NOINLINE",
    "optparse",
    "OVERLAPPABLE",
    "pkgs",
    "Posix",
    "reldir",
    "relfile",
    "Semigroup",
    "snoc",
    "testlib",
    "typeclasses",
    "Unagi"
  ],
  "nixEnvSelector.nixFile": "${workspaceFolder}/shell.nix",
  // Haskell
  "haskell.manageHLS": "PATH",
  "[haskell]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "haskell.haskell"
  },
  "haskell.formattingProvider": "fourmolu",
  "haskell.plugin.fourmolu.config.external": true,
  // JSON
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  // Markdown
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  }
}
